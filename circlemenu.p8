pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
center_x, center_y = 64,64
ring_width=10
inner_radius=20
circs=500
selected_angle=30

function _update60()
	selected_angle=(selected_angle+1)%360
end

function _draw()
	cls(0)
	for i=0,circs do
		angle = 360*i/circs
		fill_color = 11
		circfill(center_x+inner_radius*cos(angle),center_y+inner_radius*sin(angle),ring_width,11)
	end
	
	for a_offset=-5,5 do
		angle=(selected_angle+a_offset)/360
		circfill(center_x+inner_radius*cos(angle),center_y+inner_radius*sin(angle),ring_width,8)
	end
end
